{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\n// 3. Import các hàm helper từ Vuex\nimport { mapGetters, mapActions } from 'vuex';\nexport default {\n  name: 'CartView',\n  computed: {\n    // 4. Lấy dữ liệu từ getters của module 'cart'\n    // Những getter này sẽ tự động cập nhật khi giỏ hàng thay đổi\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice'])\n  },\n  methods: {\n    // 5. Lấy các actions từ module 'cart' để sử dụng\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\n    async handleCheckout() {\n      // Giả lập xử lý thanh toán\n      await this.checkout();\n      alert('Thanh toán thành công! Giỏ hàng của bạn đã được xóa.');\n      // Chuyển về trang chủ sau khi thanh toán\n      this.$router.push('/');\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","mapActions","name","computed","methods","handleCheckout","checkout","alert","$router","push"],"sources":["src/views/CartView.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart-page\">\r\n    <h1>Giỏ hàng của bạn</h1>\r\n\r\n    <div v-if=\"cartItemCount === 0\" class=\"empty-cart\">\r\n      <p>Chưa có sản phẩm nào trong giỏ hàng.</p>\r\n      <router-link to=\"/\" class=\"back-to-shop-btn\">Quay lại mua sắm</router-link>\r\n    </div>\r\n\r\n    <div v-else>\r\n      <div v-for=\"item in cartItems\" :key=\"item.id\" class=\"cart-item\">\r\n        <img :src=\"item.image\" :alt=\"item.title\" class=\"item-image\" />\r\n        <div class=\"item-details\">\r\n          <h4>{{ item.title }}</h4>\r\n          <p class=\"item-price\">Giá: ${{ item.price }}</p>\r\n          <p class=\"item-quantity\">Số lượng: {{ item.quantity }}</p>\r\n        </div>\r\n        <button @click=\"removeProductFromCart(item.id)\" class=\"remove-btn\">Xóa</button>\r\n      </div>\r\n\r\n      <div class=\"cart-summary\">\r\n        <h3>Tổng tiền: ${{ cartTotalPrice }}</h3>\r\n        <button @click=\"handleCheckout\" class=\"checkout-btn\">Thanh toán</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n// 3. Import các hàm helper từ Vuex\r\nimport { mapGetters, mapActions } from 'vuex';\r\n\r\nexport default {\r\n  name: 'CartView',\r\n  computed: {\r\n    // 4. Lấy dữ liệu từ getters của module 'cart'\r\n    // Những getter này sẽ tự động cập nhật khi giỏ hàng thay đổi\r\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice']),\r\n  },\r\n  methods: {\r\n    // 5. Lấy các actions từ module 'cart' để sử dụng\r\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\r\n\r\n    async handleCheckout() {\r\n      // Giả lập xử lý thanh toán\r\n      await this.checkout();\r\n      alert('Thanh toán thành công! Giỏ hàng của bạn đã được xóa.');\r\n      // Chuyển về trang chủ sau khi thanh toán\r\n      this.$router.push('/');\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.cart-page {\r\n  max-width: 800px;\r\n  margin: 2rem auto;\r\n  padding: 1rem;\r\n}\r\n.empty-cart {\r\n  text-align: center;\r\n  padding: 3rem;\r\n  border: 1px dashed #ccc;\r\n  border-radius: 8px;\r\n}\r\n.back-to-shop-btn {\r\n  display: inline-block;\r\n  margin-top: 1rem;\r\n  padding: 0.75rem 1.5rem;\r\n  background-color: #42b983;\r\n  color: white;\r\n  text-decoration: none;\r\n  border-radius: 5px;\r\n}\r\n.cart-item {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-bottom: 1.5rem;\r\n  padding-bottom: 1.5rem;\r\n  border-bottom: 1px solid #eee;\r\n}\r\n.item-image {\r\n  width: 100px;\r\n  height: 100px;\r\n  object-fit: contain;\r\n  margin-right: 1.5rem;\r\n}\r\n.item-details {\r\n  flex-grow: 1;\r\n}\r\n.item-details h4 {\r\n  margin: 0 0 0.5rem 0;\r\n}\r\n.remove-btn {\r\n  background: #ff4d4d;\r\n  color: white;\r\n  border: none;\r\n  padding: 0.5rem 0.75rem;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n.cart-summary {\r\n  text-align: right;\r\n  margin-top: 2rem;\r\n}\r\n.cart-summary h3 {\r\n  margin-bottom: 1rem;\r\n}\r\n.checkout-btn {\r\n  background: #007bff;\r\n  color: white;\r\n  padding: 0.75rem 2rem;\r\n  border: none;\r\n  font-size: 1.1em;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n</style>"],"mappings":";AA6BA;AACA,SAAAA,UAAA,EAAAC,UAAA;AAEA;EACAC,IAAA;EACAC,QAAA;IACA;IACA;IACA,GAAAH,UAAA;EACA;EACAI,OAAA;IACA;IACA,GAAAH,UAAA;IAEA,MAAAI,eAAA;MACA;MACA,WAAAC,QAAA;MACAC,KAAA;MACA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
re.dispatch('cart/addProductToCart', this.items);\r\n      \r\n      // 2. Bật popup lên\r\n      this.showNotification = true;\r\n      \r\n      // 3. Tự động tắt popup sau 2.5 giây\r\n      setTimeout(() => {\r\n        this.showNotification = false;\r\n      }, 2500);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.product-card {\r\n  border: 1px solid #ddd;\r\n  padding: 1rem;\r\n  text-align: center;\r\n  /* SỬA LỖI: Thêm position relative để popup định vị đúng */\r\n  position: relative;\r\n  overflow: hidden; /* Giúp hiệu ứng đẹp hơn */\r\n}\r\n.product-image {\r\n  height: 120px;\r\n  max-width: 100%; /* Sửa lại để ảnh responsive hơn */\r\n  object-fit: contain;\r\n}\r\n.product-title {\r\n  font-size: 1rem;\r\n  height: 3em;\r\n  overflow: hidden;\r\n}\r\na {\r\n  text-decoration: none;\r\n  color: inherit;\r\n}\r\n.add-to-cart-btn {\r\n  background: #42b983;\r\n  color: white;\r\n  border: none;\r\n  padding: 0.5rem 1rem;\r\n  cursor: pointer;\r\n}\r\n\r\n/* THÊM VÀO: CSS cho popup và hiệu ứng */\r\n.notification-popup {\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  background-color: rgba(0, 0, 0, 0.75);\r\n  color: white;\r\n  padding: 10px 0;\r\n  text-align: center;\r\n}\r\n\r\n.fade-enter-active, .fade-leave-active {\r\n  transition: opacity 0.5s, transform 0.5s;\r\n}\r\n.fade-enter, .fade-leave-to {\r\n  opacity: 0;\r\n  transform: translateY(100%);\r\n}\r\n</style>"],"mappings":"AAmBA;EACAA,KAAA;IACAC,KAAA;MAAAC,IAAA,EAAAC,MAAA;MAAAC,QAAA;IAAA;EACA;EACA;EACAC,KAAA;IACA;MACAC,gBAAA;IACA;EACA;EACA;EACAC,OAAA;IACAC,gBAAA;MACA;MACA,KAAAC,MAAA,CAAAC,QAAA,+BAAAT,KAAA;;MAEA;MACA,KAAAK,gBAAA;;MAEA;MACAK,UAAA;QACA,KAAAL,gBAAA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
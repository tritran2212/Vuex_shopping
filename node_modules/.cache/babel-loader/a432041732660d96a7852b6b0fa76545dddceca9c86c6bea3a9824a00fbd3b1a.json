{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { mapGetters, mapActions } from 'vuex';\nimport AppModal from '@/components/AppModal.vue'; // Chỉ cần import 1 modal\n\nexport default {\n  name: 'CartView',\n  components: {\n    AppModal\n  },\n  data() {\n    return {\n      // Chỉ cần 1 biến để quản lý popup xác nhận\n      showConfirmModal: false\n    };\n  },\n  computed: {\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice'])\n  },\n  methods: {\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\n    // Bước 1: Người dùng nhấn \"Thanh toán\" -> Mở popup\n    openConfirmation() {\n      this.showConfirmModal = true;\n    },\n    // Bước 2a: Người dùng nhấn \"Hủy\" -> Đóng popup\n    cancelCheckout() {\n      this.showConfirmModal = false;\n    },\n    // Bước 2b: Người dùng nhấn \"Xác nhận\" -> Xử lý logic\n    async confirmAndCheckout() {\n      // Gọi action checkout (lúc này mới xóa giỏ hàng)\n      await this.checkout();\n\n      // Đóng popup\n      this.showConfirmModal = false;\n\n      // Thông báo thành công và chuyển trang\n      alert('Thanh toán thành công! Cảm ơn bạn đã mua sắm.');\n      this.$router.push('/');\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","mapActions","AppModal","name","components","data","showConfirmModal","computed","methods","openConfirmation","cancelCheckout","confirmAndCheckout","checkout","alert","$router","push"],"sources":["src/components/AppModal.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart-page\">\r\n    <h1>Giỏ hàng của bạn</h1>\r\n    <div v-if=\"cartItemCount === 0\" class=\"empty-cart\">\r\n      <p>Chưa có sản phẩm nào trong giỏ hàng.</p>\r\n      <router-link to=\"/\" class=\"back-to-shop-btn\">Quay lại mua sắm</router-link>\r\n    </div>\r\n    <div v-else>\r\n      <div v-for=\"item in cartItems\" :key=\"item.id\" class=\"cart-item\">\r\n        <img :src=\"item.image\" :alt=\"item.title\" class=\"item-image\" />\r\n        <div class=\"item-details\">\r\n          <h4>{{ item.title }}</h4>\r\n          <p class=\"item-price\">Giá: ${{ item.price }}</p>\r\n          <p class=\"item-quantity\">Số lượng: {{ item.quantity }}</p>\r\n        </div>\r\n        <button @click=\"removeProductFromCart(item.id)\" class=\"remove-btn\">Xóa</button>\r\n      </div>\r\n      <div class=\"cart-summary\">\r\n        <h3>Tổng tiền: ${{ cartTotalPrice }}</h3>\r\n        <button @click=\"openConfirmation\" class=\"checkout-btn\">Thanh toán</button>\r\n      </div>\r\n    </div>\r\n\r\n    <AppModal\r\n      :show=\"showConfirmModal\"\r\n      title=\"Xác nhận thanh toán\"\r\n      @close=\"cancelCheckout\"\r\n    >\r\n      <p>Bạn có chắc chắn muốn thanh toán và hoàn tất đơn hàng này không?</p>\r\n\r\n      <template v-slot:footer>\r\n        <div class=\"confirmation-buttons\">\r\n          <button @click=\"cancelCheckout\" class=\"cancel-button\">Hủy</button>\r\n          <button @click=\"confirmAndCheckout\" class=\"confirm-button\">Xác nhận</button>\r\n        </div>\r\n      </template>\r\n    </AppModal>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters, mapActions } from 'vuex';\r\nimport AppModal from '@/components/AppModal.vue'; // Chỉ cần import 1 modal\r\n\r\nexport default {\r\n  name: 'CartView',\r\n  components: {\r\n    AppModal,\r\n  },\r\n  data() {\r\n    return {\r\n      // Chỉ cần 1 biến để quản lý popup xác nhận\r\n      showConfirmModal: false,\r\n    };\r\n  },\r\n  computed: {\r\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice']),\r\n  },\r\n  methods: {\r\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\r\n\r\n    // Bước 1: Người dùng nhấn \"Thanh toán\" -> Mở popup\r\n    openConfirmation() {\r\n      this.showConfirmModal = true;\r\n    },\r\n\r\n    // Bước 2a: Người dùng nhấn \"Hủy\" -> Đóng popup\r\n    cancelCheckout() {\r\n      this.showConfirmModal = false;\r\n    },\r\n\r\n    // Bước 2b: Người dùng nhấn \"Xác nhận\" -> Xử lý logic\r\n    async confirmAndCheckout() {\r\n      // Gọi action checkout (lúc này mới xóa giỏ hàng)\r\n      await this.checkout();\r\n\r\n      // Đóng popup\r\n      this.showConfirmModal = false;\r\n\r\n      // Thông báo thành công và chuyển trang\r\n      alert('Thanh toán thành công! Cảm ơn bạn đã mua sắm.');\r\n      this.$router.push('/');\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* CSS cũ của bạn giữ nguyên */\r\n.cart-page { max-width: 800px; margin: 2rem auto; padding: 1rem; }\r\n/* ... */\r\n.checkout-btn { background: #007bff; color: white; padding: 0.75rem 2rem; border: none; font-size: 1.1em; border-radius: 5px; cursor: pointer; }\r\n\r\n/* THÊM VÀO: CSS cho 2 nút bấm trong popup xác nhận */\r\n.confirmation-buttons {\r\n  width: 100%;\r\n  display: flex;\r\n  justify-content: flex-end;\r\n  gap: 10px;\r\n}\r\n.cancel-button, .confirm-button {\r\n  border: none;\r\n  padding: 10px 20px;\r\n  border-radius: 5px;\r\n  font-size: 1rem;\r\n  cursor: pointer;\r\n}\r\n.cancel-button {\r\n  background-color: #f1f1f1;\r\n  border: 1px solid #ddd;\r\n}\r\n.confirm-button {\r\n  background-color: #42b983;\r\n  color: white;\r\n}\r\n</style>"],"mappings":";AAyCA,SAAAA,UAAA,EAAAC,UAAA;AACA,OAAAC,QAAA;;AAEA;EACAC,IAAA;EACAC,UAAA;IACAF;EACA;EACAG,KAAA;IACA;MACA;MACAC,gBAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAP,UAAA;EACA;EACAQ,OAAA;IACA,GAAAP,UAAA;IAEA;IACAQ,iBAAA;MACA,KAAAH,gBAAA;IACA;IAEA;IACAI,eAAA;MACA,KAAAJ,gBAAA;IACA;IAEA;IACA,MAAAK,mBAAA;MACA;MACA,WAAAC,QAAA;;MAEA;MACA,KAAAN,gBAAA;;MAEA;MACAO,KAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
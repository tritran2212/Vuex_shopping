utton>\r\n      </div>\r\n\r\n      <h3 class=\"text-xl mt-4\">Tổng: ${{ cartTotalPrice }}</h3>\r\n      <button @click=\"handleCheckout\" class=\"mt-2 bg-green-500 text-white px-4 py-2 rounded\">Thanh toán</button>\r\n    </div>\r\n\r\n    <!-- ✅ Popup xác nhận -->\r\n    <AppModal\r\n      :show=\"showModal\"\r\n      title=\"Xác nhận xóa\"\r\n      :message=\"`Bạn có chắc muốn xóa ${selectedItem?.title}?`\"\r\n      @cancel=\"closeModal\"\r\n      @confirm=\"confirmDelete\"\r\n    />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters, mapActions } from 'vuex';\r\nimport AppModal from '@/components/AppModal.vue';\r\n\r\nexport default {\r\n  components: { AppModal },\r\n  data() {\r\n    return {\r\n      showModal: false,\r\n      selectedItem: null,\r\n    };\r\n  },\r\n  computed: {\r\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice']),\r\n  },\r\n  methods: {\r\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\r\n\r\n    openModal(item) {\r\n      this.selectedItem = item;\r\n      this.showModal = true;\r\n    },\r\n    closeModal() {\r\n      this.showModal = false;\r\n      this.selectedItem = null;\r\n    },\r\n    confirmDelete() {\r\n      this.removeProductFromCart(this.selectedItem.id);\r\n      this.closeModal();\r\n    },\r\n    async handleCheckout() {\r\n      await this.checkout();\r\n      alert('Thanh toán thành công!');\r\n      this.$router.push('/');\r\n    },\r\n  },\r\n};\r\n</script>\r\n"],"mappings":";AAmCA,SAAAA,UAAA,EAAAC,UAAA;AACA,OAAAC,QAAA;AAEA;EACAC,UAAA;IAAAD;EAAA;EACAE,KAAA;IACA;MACAC,SAAA;MACAC,YAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAP,UAAA;EACA;EACAQ,OAAA;IACA,GAAAP,UAAA;IAEAQ,UAAAC,IAAA;MACA,KAAAJ,YAAA,GAAAI,IAAA;MACA,KAAAL,SAAA;IACA;IACAM,WAAA;MACA,KAAAN,SAAA;MACA,KAAAC,YAAA;IACA;IACAM,cAAA;MACA,KAAAC,qBAAA,MAAAP,YAAA,CAAAQ,EAAA;MACA,KAAAH,UAAA;IACA;IACA,MAAAI,eAAA;MACA,WAAAC,QAAA;MACAC,KAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType
{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { mapGetters, mapActions } from 'vuex';\nexport default {\n  name: 'CartView',\n  computed: {\n    ...mapGetters('cart', ['cartItems', 'cartItemCount', 'cartTotalPrice'])\n  },\n  methods: {\n    ...mapActions('cart', ['removeProductFromCart', 'checkout']),\n    // ✅ Thêm xác nhận trước khi xóa\n    confirmRemove(productId) {\n      const ok = confirm('Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng không?');\n      if (ok) {\n        this.removeProductFromCart(productId);\n      }\n    },\n    async handleCheckout() {\n      await this.checkout();\n      alert('Thanh toán thành công! Giỏ hàng của bạn đã được xóa.');\n      this.$router.push('/');\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","mapActions","name","computed","methods","confirmRemove","productId","ok","confirm","removeProductFromCart","handleCheckout","checkout","alert","$router","push"],"sources":["src/views/CartView.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart-page\">\r\n    <h1>Giỏ hàng của bạn</h1>\r\n\r\n    <div v-if=\"cartItemCount === 0\" class=\"empty-cart\">\r\n      <p>Chưa có sản phẩm nào trong giỏ hàng.</p>\r\n      <router-link to=\"/\" class=\"back-to-shop-btn\">Quay lại mua sắm</router-link>\r\n    </div>\r\n\r\n    <div v-else>\r\n      <div v-for=\"item in cartItems\" :key=\"item.id\" class=\"cart-item\">\r\n        <img :src=\"item.image\" :alt=\"item.title\" class=\"item-image\" />\r\n        <div class=\"item-details\">\r\n          <h4>{{ item.title }}</h4>\r\n          <p class=\"item-price\">Giá: ${{ item.price }}</p>\r\n          <p class=\"item-quantity\">Số lượng: {{ item.quantity }}</p>\r\n        </div>\r\n        <button @click=\"confirmRemove(item.id)\" class=\"remove-btn\">Xóa</button>\r\n      </div>\r\n\r\n      <div class=\"cart-summary\">\r\n        <h3>Tổng tiền: ${{ cartTotalPrice }}</h3>\r\n        <button @click=\"handleCheckout\" class=\"checkout-btn\">Thanh t